<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>MyServletExample2</display-name>
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.mahesh.servlets.LoginServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/loginAction</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>userDetailsServlet</servlet-name>
		<servlet-class>com.mahesh.servlets.UserDetailsServlets</servlet-class>
	</servlet>
	
	
	<servlet-mapping>
		<servlet-name>userDetailsServlet</servlet-name>
		<url-pattern>/addUserDetailsAction</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>userDetailsServlet</servlet-name>
		<url-pattern>/deleteUserAction</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>userDetailsServlet</servlet-name>
		<url-pattern>/editUserAction</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>userDetailsServlet</servlet-name>
		<url-pattern>/modifyUserAction</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>userDetailsServlet</servlet-name>
		<url-pattern>/searchUserAction</url-pattern>
	</servlet-mapping>
	
	
	
	
	
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>